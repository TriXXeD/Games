<Ui xmlns="http://www.blizzard.com/wow/ui" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
<Frame name="zPetsGUI" enableMouse="true" movable="true" parent="UIParent">
<Scripts>
  <OnLoad>self:RegisterForDrag("LeftButton");</OnLoad>
  <OnDragStart>impStartDrag();</OnDragStart>
  <OnDragStop>self:StopMovingOrSizing();</OnDragStop>
  
  
<!--
      <OnLoad>self.TimeSinceLastUpdate = 0 </OnLoad>
      <OnUpdate function="MyAddon_OnUpdate" /> -->     
 
</Scripts>

    <Size>
      <AbsDimension x="10" y="10" />
    </Size>
    <Anchors>
      <Anchor point="CENTER" relativeTo="UIParent">
        <Offset>
          <AbsDimension x="0" y="0" />
        </Offset>
      </Anchor>
    </Anchors>
	
    <Backdrop bgFile="Interface\dialogframe\ui-dialogbox-background-dark" edgeFile="Interface\tooltips\UI-tooltip-Border" tile="true">
		<EdgeSize>
			<AbsValue val="8"/>
		</EdgeSize>
		<TileSize>
			<AbsValue val="32"/>
		</TileSize>
		<BackgroundInsets>
			<AbsInset left="1" right="1" top="1" bottom="1"/>
		</BackgroundInsets>
    </Backdrop>
	
	<Layers>	
		<Layer level="ARTWORK">
			<FontString name="impCounterNumber" font="Fonts\ARIALN.TTF" text="" justifyH="BOTTOMLEFT" justifyV="TOP">
				<Color r="1" g="1" b="1" a="1"/>
				<FontHeight val="13" />
				<Anchors>
					<Anchor point="CENTER" relativeTo="$parent" x="18" y="15" />
				</Anchors>
			</FontString>
			
			<FontString name="impMessageText" font="Fonts\ARIALN.TTF" text="" justifyH="LEFT" justifyV="BOTTOM">
				<Color r="1" g="1" b="1" a="1"/>
				<FontHeight val="8" />
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parent" x="5" y="-17" />
				</Anchors>			
			</FontString>
		
			
		</Layer>
	</Layers>
  </Frame>
</Ui>